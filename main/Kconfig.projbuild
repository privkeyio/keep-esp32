menu "FROST Participant Configuration"

    config USE_UART_CONSOLE
        bool "Use UART for serial console (for QEMU)"
        default n
        help
            Use UART0 instead of USB Serial JTAG for serial console.
            Enable this for QEMU testing.

    config WIFI_SSID
        string "WiFi SSID"
        default "myssid"
        help
            SSID of the WiFi network to connect to.

    config WIFI_PASSWORD
        string "WiFi Password"
        default "mypassword"
        help
            Password for the WiFi network.

    config NOSTR_RELAY_URL
        string "Nostr Relay URL"
        default "wss://relay.damus.io"
        help
            WebSocket URL of the Nostr relay to connect to.

endmenu
